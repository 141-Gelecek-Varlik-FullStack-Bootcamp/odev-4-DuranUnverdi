
@model EntityLayer.Concrete.Product
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Ürün Ekle</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("InsertProduct", "Product", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Ürün Adı</label>
                        @Html.TextBoxFor(x => x.ProductName, new
                        {
                            @class = "form-control"
                        })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-4">Ürün Fiyatı</label>
                        @Html.TextBoxFor(x => x.ProductPrice, new
                   {
                       @class = "form-control",
                       type = "number"
                   })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-4">Ürün Stok</label>
                        @Html.TextBoxFor(x => x.ProductStok, new
                   {
                       @class = "form-control",
                       type = "text"
                   })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-4">Ürün Açıklaması</label>
                        @Html.TextBoxFor(x => x.ProductDescription, new
                        {
                            @class = "form-control",
                       type = "text"
                   })
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kaydet</button>
                    <div>
                        <a href="/Product/GetProduct" class="btn btn-success">Ürün Listele</a>
                    </div>
                }


            </div>
        </div>
    </div>
</section>

